        <TreeView fx:id="fileTreeView" />
    </left>
    <center>
        <ScrollPane fx:id="propertyEditorScrollPane">
            <VBox fx:id="propertyEditorVBox"/>
        </ScrollPane>
    </center>
</BorderPane>